<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Ultimate Tech Blog</title>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,400i,700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/style.css"/>
</head>



<body class="flex-column min-100-vh">
    <nav class="navbar">
        <ul class="flex-row">
            <li class="li-inline nav-item"><a href="/">Home</a></li>
            <li class="li-inline nav-item"><a href="/dashboard">Dashboard</a></li>

            {{#if loggedIn}}
                <li class="li-inline nav-item"><a href="#" id="logout">Log Out</a></li>
            {{else}}
                <li class="li-inline nav-item"><a href="/login">Log In</a></li>
            {{/if}}
        </ul>
    </nav>


    <header class="hero">
        {{#if dashboard}}
            <h1 class="app-title"><a href="/dashboard">Dashboard</a></h1>
        {{else}}
            <h1 class="app-title"><a href="/">The Ultimate Tech Blog</a></h1>
        {{/if}}
    </header>


    <main class="col-auto">
        {{{body}}}
    </main>


    {{#if dashboard}}
        <footer class="footer flex-row justify-center">
            <a href="/dashboard/new">New Post</a>
        </footer>
    {{else}}
        <footer class="flex-row justify-center">
            &copy; Nick O'Brien
        </footer>
    {{/if}}


    {{#if loggedIn}}
        <script src="/js/logout.js"></script>
    {{/if}}


</body>
</html>